<h1>Listing equipment</h1>

<table>
  <thead>
    <tr>
      <th>Eq name</th>
      <th>Eq description</th>
      <th>Eq number</th>
      <th>Categories</th>
      <th>Links</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equipment.each do |equipment| %>
      <tr>
        <td><%= equipment.eq_name %></td>
        <td><%= equipment.eq_description %></td>l
        <td><%= equipment.eq_number %></td>
        <td>
          <% equipment.categories.each do |category| %>
              <%= category.cat_name %>
              <%= link_to 'Link', update_menu_path(id: category, format: :json) %>
          <% end %>
          <%= select_tag "category_id", options_from_collection_for_select(equipment.categories, "id", "cat_name"), :prompt => "Select", :onchange => "update_menu(this.value)" %>


        </td>
        <td>
          <% equipment.links.each do |link| %>
              <%= link.link_name %>
          <% end %>
        </td>
        <td><%= link_to 'Show', equipment %></td>
        <td><%= link_to 'Edit', edit_equipment_path(equipment) %></td>
        <td><%= link_to 'Destroy', equipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Equipment', new_equipment_path %>

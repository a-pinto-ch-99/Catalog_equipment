<div class="page-header">
  <h1>
   <%= @category.cat_name %><small> - Category</small>
	</h1>
</div>
<ul class="breadcrumb">
   <li>
     <%= link_to 'Back', categories_path %> <span class="divider">/</span>
  </li>
  <li>
    <%= link_to 'Edit', edit_category_path(@category) %> <span class="divider">/</span>
  </li>
  <li class="active">
	  Show Category
  </li>
</ul>
 
<h3>Category description:</h3>
<p>
  <%= @category.cat_description %>
</p>

<h3>Corresponding Sub Categories :</h3>
<ul>
  <% @category.sub_categories.each do |sub_cat| %>
  <li>
    <%= link_to sub_cat.name, sub_category_path(sub_cat) %>
  </li>
  <% end %>
</ul>

<p id="notice"><%= notice %></p>
